# Backend environment example
SESSION_SECRET=change_me_secure
PORT=4000
# Comma separated origins allowed for CORS (include frontend + tunnel origins)
CORS_ORIGINS=http://localhost:3000

# WebAuthn relying party (set fixed values in production)
RP_ID=localhost
RP_ORIGIN=http://localhost:3000
# Development ONLY: allow deriving RP dynamically from HTTPS Origin header (tunnels)
ALLOW_DYNAMIC_RP=0

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/google/callback

# Email SMTP (optional for forgot password)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASS=
